---
import TimetableDay from "./timetable-day.astro";
import ContentSection from "~/components/content-section.astro";

import {fridayClasses, mondayClasses, sundayClasses, wednesdayClasses} from "../data/classes"
---

<ContentSection title="Timetable" id="timetable">
  <TimetableDay
    items={mondayClasses}
    title="Monday"
  />
  <TimetableDay
      items={wednesdayClasses}
      title="Wednesday"
  />
  <TimetableDay
      items={fridayClasses}
      title="Friday"
  />
  <TimetableDay
      items={sundayClasses}
      title="Sunday"
  />
</ContentSection>
