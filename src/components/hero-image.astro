---
import { Picture } from "@astrojs/image/components"
import splashAdults from "../assets/splash/splash_adults.jpg"
import splashKids from "../assets/splash/splash_kids.jpg"

const widths = [450, 800, 1200]
const sizes = "100vw"
---
<div class="x-fade-container">
    <Picture
            class="object-cover w-full h-full x-fade-first"
            src={splashKids}
            widths={widths}
            sizes={sizes}
            alt="Adults and Teens Judo"
    />
    <Picture
            class="object-cover w-full h-full x-fade-last"
            src={splashAdults}
            widths={widths}
            sizes={sizes}
            alt="Adults and Teens Judo"
    />
</div>

<style>
    .x-fade-container {
        position: relative;
        height: 100%;
        width: 100%;
    }

    .x-fade-first {
        position: absolute;
        animation-name: x-fade;
        animation-duration: 10s;
        animation-iteration-count: infinite;
    }

    .x-fade-last {
        position: absolute;
        animation-name: x-fade;
        animation-duration: 10s;
        animation-iteration-count: infinite;
        animation-delay: 5s;
    }

    @keyframes x-fade {
        0% {opacity: 1;}
        25% {opacity: 1;}
        50% {opacity: 0;}
        75% {opacity: 0;}
        100% {opacity: 1;}
    }

</style>